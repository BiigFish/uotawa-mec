---
layout: "base.njk"
---

<div class="banner pages">
    <div class="title-container">
        <div class="title-text">
            <a href="/"><h1>{{ settings.name }}</h1></a>
        </div>
    </div>
</div>
<div class="page-title">
    {% if page.url == "/equipment-donations/" or page.url == "/monetary-donations/"%}
        <a href="/donate">
    {% else %}
        <a href="/">
    {% endif %}
            <div class="back">&#129032; Back</div>
        </a>

    <h2>{{title}}</h2>
</div>

<div class="page-content">
    {{ content | safe }}

    {% if page.url == "/equipment-donations/" %}
        <div class="donation-button-container">
        <a class="donation-button" href="{{ buttonlink }}">{{ buttontext }}</a>
        </div>
    {% endif %}
    {% if page.url == "/monetary-donations/" %}
        <div class="donation-button-container">
        <a class="donation-button" href="{{ buttonlink }}">{{ buttontext }}</a>
        </div>
    {% endif %}
</div>